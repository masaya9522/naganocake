<div class="container">
  <h5><strong>
    <%= @customer.last_name + @customer.first_name %>
  </strong>さんの
  <strong>会員詳細</strong></h5>
  
  <table class="mt-5 table table-borderless">
    <tr>
      <th>会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td>
        <% if @customer.is_active == true %>
        有効
        <% else %>
        退会
        <% end %>
      </td>
    </tr>
    <tr>
      <th></th>
      <td>
        <%= link_to '編集する', edit_admin_customer_path(@customer), class: "mr-5 btn btn-success" %><span>
          <%= link_to '注文履歴一覧を見る', admin_order_path, class: "btn btn-primary" %>
        </span>
      </td>
    </tr>
  </table>
  
</div>