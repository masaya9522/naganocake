<div class="container">
  <h5 class="m-3"><strong>商品詳細</strong></h5>
  <div class="row mt-5 justify-content-center">
    <div class="col-lg-4">
       <p class="my-3 ml-4">
            <% if @item.item_image.attached? %>
            <%= image_tag @item.item_image, size: "200x200" %>
            <% else %>
            <%= image_tag 'no_image', size: "200x200" %>
            <% end %>
    </div>
    <div class="col-lg-7 offset-ms-1">
       <table class="table table-bordered">
         <tr>
           <th>商品名</th>
           <td><%= @item.name %></td>
         </tr>
         <tr>
           <th>商品説明</th>
           <td><%= @item.introduction %></td>
         </tr>
         <tr>
           <th>税込価格 (税抜価格)</th>
           <td><%= @item.with_tax_price %>円 (<%= @item.price %>円)</td>
         </tr>
       </table>
       <%= link_to '編集する', edit_admin_item_path(@item), class: 'ml-5 btn btn-success' %>
    </div>
  </div>
</div>
