  <h5 class="ml-5"><strong>商品新規登録</strong></h5>
    <%= form_with model: @item, url: admin_item_path do |f| %>
      <div class="row justify-content-center">
        <table>
          <tr>
            <th>商品画像</th>
            <td>
              <%= f.file_field :item_image, accept: "image/*" %>
            </td>
          </tr>
          <tr>
            <th>商品名</th>
            <td>
              <%= f.text_field :name %>
            </td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td>
              <%= f.text_field :introduction %>
            </td>
          </tr>
          <tr>
            <th>税抜価格</th>
            <td>
              <%= f.text_field :price %>
            </td>
          </tr>
        </table>
        </div>
        <div class="row justify-content-center">
          <%= f.submit '変更を保存', class: "btn btn-success" %>
        </div>
    <% end %>

