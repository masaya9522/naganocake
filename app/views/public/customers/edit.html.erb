<div class="container">
  <div class="m-3">
    <h5>会員情報編集</h5>
  </div>
  <div class="row">
  <table class="mt-5 table table-borderless">
    <%= form_with model: @customer, url: customers_information_path do |f| %>
    <tr>
      <th>会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= f.text_field :last_name %> 
          <%= f.text_field :first_name, class: "ml-5" %>
      </td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana, class: "ml-5" %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address, size: "50%" %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td><%= f.submit "編集内夜を保存", class: "btn btn-success" %></td>
      <td><%= link_to "退会する", confirm_withdraw_path, class: "btn btn-danger" %></td>
    </tr>
    <% end %>
  </table>
</div>
</div>