<div class="container">
  <h5 class="m-5"><strong>配送先編集</strong></h5>
  <div class="row">
    <div class="col-sm-10" %>
      <table class="table table-borderless">
        <%= form_with model: @address do |f| %>
          <tr>
            <th>郵便番号(ハイフンなし)</th>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address, size: "50%" %></td>
          </tr>
          <tr>
            <th>宛名</th>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit "変更内容を保存" , class: "btn btn-success"%></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>