<div class="container">

  <div class="row my-5">

    <div class="col-lg-9">
      <h5><strong>商品一覧</strong><span>(全<%= @items.count %>件)</span></h5>
          <div class="row">

            <% @items.each do |item| %>
            <div class="col-lg-3 d-flex flex-wrap">
            <table class="table table-borderless">
              <tr>
                <th class="align-bottom">
                  <%= link_to item_path(item) do %>
                  <%= image_tag item.get_item_image(200,200) %>
                  <% end %>
                </th>
              </tr>
              <tr>
                <th class="align-bottom">
                  <%= item.name %>
                </th>
              </tr>
              <tr>
                <th class="align-bottom">
                  ￥<%= item.price %>
                </th>
              </tr>
            </table>
          </div>
          <% end %>

        </div>
      <%= paginate @items, class: "mt-2 mx-auto" %>
    </div>

  </div>

</div>