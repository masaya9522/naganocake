<div class="container">
  <h5 class="m-3">新規会員登録</h5>
<div class="row">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
　<table class="table table-borderless table-sm">
　  <tr>
　    <th>名前</th>
　    <td>(姓)　<%= f.text_field :last_name %></td>
　    <td>(名)　<%= f.text_field :first_name %></td>
　  </tr>
　  <tr>
　    <th>フリガナ</th>
　    <td>(セイ)<%= f.text_field :last_name_kana %></td>
　    <td>(メイ)<%= f.text_field :first_name_kana %></td>
　  </tr>
    <tr>
      <th>メールアドレス</th>
      <td>　　　<%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
      <th>郵便番号(ハイフンなし)</th>
      <td>　　　<%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td>　　　<%= f.text_field :address, size: "50%" %></td>
    </tr>
    <tr>
      <th>電話番号(ハイフンなし)</th>
      <td>　　　<%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <th><% if @minimum_password_length %>
          <em>パスワード　　　(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
      </th>
      <td>　　　<%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>
    <tr>
      <th>パスワード(確認用)</th>
      <td>　　　<%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>
    <tr>
      <th></th>
      <td>　　　<%= f.submit "新規登録", class: "btn btn-success" %></td>
    </tr>
  </table>
<% end %>
<div class="row mx-5">
  <p5 class="mx-3">既に登録済みの方</p5>
  <%= link_to "こちら", new_customer_session_path %>
</div>
</div>
</div>