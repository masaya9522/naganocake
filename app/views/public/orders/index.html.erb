 <% @orders.each do |order| %>
 
<p>注文日：<%= order.created_at.strftime('%Y/%m/%d') %></p>
 <p>配送先：<%= order.address %></p>
 <% order.order_items.each do |order_item| %>
 <p>注文商品：<%= order_item.item.name %></p>
 <% end %>
 <p>支払金額：<%= (order.postage + order.calculation(order)).to_s(:delimited, delimiter: ',') %></p>
  <%= link_to "表示する", order_path(order.id) %>
 <% end %>