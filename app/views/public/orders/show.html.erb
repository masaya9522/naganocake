<div class="container">
  <h5 class="mx-5 my-3">注文履歴詳細</h5>
  <div class="row">
    <div class="col-lg-6 mr-1">
      <h6>注文情報</h6>
      <table class="table table-bordered">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.full_address %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-lg-3">
      <h6>請求情報</h6>
      <table class="table table-bordered">
        <tr>
          <th>商品合計</th>
          <td><%= @order.total_price - 800 %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td>800</td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.total_price %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <h6>注文内容</h6>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.item.name %></td>
          <td><%= order_item.item.with_tax_price %></td>
          <td><%= order_item.amount %></td>
          <td><%= order_item.amount * order_item.item.with_tax_price %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>